{
  "kind": "collectionType",
  "collectionName": "shows",
  "info": {
    "singularName": "show",
    "pluralName": "shows",
    "displayName": "Show"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "dj": {
      "type": "string",
      "required": true
    },
    "weekday": {
      "type": "enumeration",
      "enum": [
        "Monday",
        "Tuesday",
        "Wednesday",
        "Thursday",
        "Friday",
        "Saturday",
        "Sunday"
      ]
    },
    "start": {
      "type": "time",
      "required": true
    },
    "end": {
      "type": "time",
      "required": true
    },
    "description": {
      "type": "richtext"
    },
    "header": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": false
    },
    "onAir": {
      "type": "boolean",
      "default": true,
      "required": true
    }
  }
}
